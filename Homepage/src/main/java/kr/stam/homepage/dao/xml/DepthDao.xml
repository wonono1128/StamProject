<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.stam.homepage.dao.DepthDao">
	<!-- 다음 게시판 글 번호 알아보기 -->
	<select id="nextNum" resultType="Integer">
	    select max(menuCode) from menu; 
	</select>
	
	<!-- 뎁스 입력 -->
	<insert id="insert" parameterType="kr.stam.homepage.dto.DepthDto">
		insert into menu(menuParents,menuContents) values(#{menuParents}, #{menuContents})
	</insert>
	
	<!-- 뎁스 목록 -->	
	<select id="list" resultType="kr.stam.homepage.dto.DepthDto">
	   select * from menu  where menuParents=#{MenuParents} order by menuCode 
	</select>
	
	
		<!-- 뎁스 목록 -->	
	<select id="listAbout" resultType="kr.stam.homepage.dto.DepthDto">
	   select * from menu  where menuParents="ABOUT" order by menuCode 
	</select>
		<!-- 뎁스 목록 -->	
	<select id="listPort" resultType="kr.stam.homepage.dto.DepthDto">
	   select * from menu  where menuParents="PORTFOLIO" order by menuCode 
	</select>
		<!-- 뎁스 목록 -->	
	<select id="listBrand" resultType="kr.stam.homepage.dto.DepthDto">
	   select * from menu  where menuParents="BRAND" order by menuCode 
	</select>
		<!-- 뎁스 목록 -->	
	<select id="listSol" resultType="kr.stam.homepage.dto.DepthDto">
	   select * from menu  where menuParents="SOLUTION" order by menuCode 
	</select>
	
	<!-- 뎁스 목록 -->	
	<select id="Flist" resultType="kr.stam.homepage.dto.DepthDto">
	   select * from menu   order by menuCode desc 
	</select>
</mapper>