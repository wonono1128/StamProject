<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.stam.homepage.dao.NoticeDao">

	<!-- 다음 게시판 글 번호 알아보기 -->
	<select id="nextNum" resultType="Integer">
	    select max(noticeNum) from notice; 
	</select>
	
	<!-- 공지사항 입력 -->
	<insert id="insert" parameterType="kr.stam.homepage.dto.NoticeDto">
		insert into notice(noticeTitle,noticeContents,managerName,noticeDay) values(#{noticeTitle}, #{noticeContents}, #{managerName}, now())
	</insert>
	<!-- 공지사항 목록 -->	
	<select id="nlist" resultType="kr.stam.homepage.dto.NoticeDto">
	   select * from notice where ${param1} like concat('%',#{param2},'%') order by noticeNum desc limit #{param3},10
<!--      <where>
	    	<if test="param1 != null and param1 != ''">
	    	
	    	</if>
	    	<choose>
	    		<when test=""></when>
	    		<otherwise></otherwise>
	    	</choose>
	    </where> -->	
	</select>
	 
	<!-- 전체 페이지 구하기 -->
	<select id="get_pagecnt" resultType="Integer">
	    select ceil(count(*)/10) from notice where ${param1} like concat('%',#{param2},'%')
	</select>
	<!-- 공지사항 상세페이지 -->
	<select id="content" resultType="kr.stam.homepage.dto.NoticeDto">
		select * from notice where noticeNum = #{noticeNum}
	</select>
	<!-- 공지사항 삭제 -->	
	<delete id="delete">
		delete from notice where noticeNum=#{noticeNum}
	</delete>
	<!-- 공지사항 수정 -->	
	<update id="update" parameterType="kr.stam.homepage.dto.NoticeDto">
		update notice set noticeTitle = #{noticeTitle} , noticeContents = #{noticeContents}, noticeDay=now() where noticeNum = #{noticeNum}
	</update>
	
	
</mapper>