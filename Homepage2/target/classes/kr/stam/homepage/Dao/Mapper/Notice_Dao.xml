<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.stam.homepage.Dao.Notice_Dao">
<!-- 공지사항 입력 -->
	<insert id="insert" parameterType="kr.stam.homepage.Dto.Notice_Dto">
		insert into notice(manager_num,notice_title,notice_contents,manager_name,notice_day) values(1,#{notice_title}, #{notice_contents}, #{manager_name}, now())
	</insert>
<!-- 공지사항 목록 -->	
	 <select id="nlist" resultType="kr.stam.homepage.Dto.Notice_Dto">
	   select * from notice where ${param1} like concat('%',#{param2},'%') order by notice_num desc limit #{param3},10
	  </select>
<!-- 전체 페이지 구하기 -->
	  <select id="get_pagecnt" resultType="Integer">
	    select ceil(count(*)/10) from notice where ${param1} like concat('%',#{param2},'%')
	  </select>
<!-- 공지사항 상세페이지 -->
	<select id="content" resultType="kr.stam.homepage.Dto.Notice_Dto">
		select * from notice where notice_num = #{notice_num}
	</select>
<!-- 공지사항 삭제 -->	
	<delete id="delete">
		delete from notice where notice_num=#{notice_num}
	</delete>
<!-- 공지사항 수정 -->	
	<update id="update" parameterType="kr.stam.homepage.Dto.Notice_Dto">
		update notice set notice_title = #{notice_title} , notice_contents = #{notice_contents}, notice_day=now() where notice_num = #{notice_num}
	</update>
</mapper>