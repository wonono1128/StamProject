<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.stam.homepage.Dao.Notice_Dao">
<!-- 공지사항 입력 -->
	<insert id="insert" parameterType="kr.stam.homepage.Dto.Notice_Dto">
		insert into notice(ntitle,ncontent,nwriter,regdate) values(#{ntitle}, #{ncontent}, #{nwriter}, now())
	</insert>
<!-- 공지사항 목록 -->	
	 <select id="nlist" resultType="kr.stam.homepage.Dto.Notice_Dto">
	   select * from notice where ${param1} like concat('%',#{param2},'%') order by nid desc limit #{param3},10
	  </select>
<!-- 전체 페이지 구하기 -->
	  <select id="get_pagecnt" resultType="Integer">
	    select ceil(count(*)/10) from notice where ${param1} like concat('%',#{param2},'%')
	  </select>

</mapper>